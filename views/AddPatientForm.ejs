 <h1> Add a patient </h1>
<form class="container" action="/AddPatientForm.ejs" method="post">
    <div><label for="Gender">Name : 
    <input type="text" name="name"
        placeholder="Name of the patient"></label></div>
<br>
       <div> <label for="Gender">Date of Birth : 
    <input type="date" name="DOB"
        placeholder="Date of birth"></label></div>
<br>
    <div><label for="Gender">Choose a gender : 
    <select id="Gender" name="Gender">
        <option value="Male">Male</option>
        <option value="Female">Female</option>
    </select></label></div>
<br>
<div>
<label for="Gender">Place of Birth : 
    <input type="text" name="Place_of_Birth"
    placeholder="Place of Birth"></label></div>
<br>
    <div><label for="Blood Group">Choose a Blood Group : 
    <select id="Blood Group" name="Blood_Group">
        <option value="O+">O+</option>
        <option value="O-">O-</option>
        <option value="A+">A+</option>
        <option value="A-">A-</option>
        <option value="B+">B+</option>
        <option value="B-">B-</option>
        <option value="AB-">AB-</option>
    </select></label></div>
<br>
<div>
<label for="Gender">Height : 
    <input type="number" name="Height"
    placeholder="Height"></label></div>
<br>
<div>
<label for="Gender">Weight : 
    <input type="number" name="Weight"
    placeholder="Weight"></label></div>

<br><div>
    <button type="button" id="savebtn">Save</button>
    <button type="button" id="cancelbtn">Cancel</button></div>
</form>